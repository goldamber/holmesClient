<Window x:Class="AppEnglish.View.Games.TimeConverter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Converter" Height="200" Width="300" Icon="..\..\Images\Eye.png" WindowState="Maximized" Loaded="Window_Loaded">
    
    <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Center">
        <TextBox Name="txtAM" HorizontalAlignment="Center" MinWidth="70" FontSize="15" Padding="5" IsReadOnly="True" />
        <Slider Name="slTime" Margin="10" ValueChanged="slTime_ValueChanged" Minimum="0" Maximum="24" />
        <TextBox Name="txt24" HorizontalAlignment="Center" MinWidth="70" FontSize="15" Padding="5" IsReadOnly="True" />
    </StackPanel>
</Window>