<Window x:Class="AppEnglish.BookReader"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Book Reader" Height="500" Width="700" Icon="..\Images\Eye.png" WindowStartupLocation="CenterScreen">

    <StackPanel>
        <TextBlock Name="txtName" Margin="10 5" FontWeight="Bold" FontSize="16" Foreground="#FF2887D6" />

        <ListBox Name="stWords" Margin="10" Height="370" ScrollViewer.HorizontalScrollBarVisibility="Disabled" MinWidth="250" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" MouseDown="StackPanel_MouseDown">
            <TextBlock FontSize="15" VerticalAlignment="Center">Add word</TextBlock>

            <Border Style="{StaticResource WinDrawBorder}" Padding="0 5" Margin="2,5,5,5">
                <Label Name="lAddWord" Style="{StaticResource WinDrawText}" FontWeight="Bold" FontSize="15">+</Label>
            </Border>
        </StackPanel>
    </StackPanel>
</Window>