<Window x:Class="AppEnglish.AddEdit.WordsPrintFilter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Filter" Height="450" Width="350" Icon="..\Images\Eye.png" Loaded="Window_Loaded">

    <ScrollViewer>
        <StackPanel>
            <CheckBox Name="chSelect" IsChecked="True" HorizontalAlignment="Right" Margin="5" Click="chSelect_Click">Select all</CheckBox>

            <ListBox Name="lstWords" Margin="5" />

            <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Stretch" Margin="10">
                <Button Name="btnOK" HorizontalAlignment="Left" Width="100" Margin="5" Click="btnOK_Click">OK</Button>
                <Button Name="btnCancel" HorizontalAlignment="Right" Width="100" Margin="5" Click="btnCancel_Click">Cancel</Button>
            </WrapPanel>
        </StackPanel>
    </ScrollViewer>
</Window>